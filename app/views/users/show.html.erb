<% provide(:title, @user.name) %>

<h1><%= @user.name %></h1>

<h5>Your Misquotes</h5>
<ul>
  <% @user.misquotables.each do |misquotable| %>
    <li>
      <%= link_to misquotable.sections.find_by_name('title').text, misquotable_path(misquotable) %>
      <% if current_user?(@user) %>
         | <%= link_to "try it again", edit_misquotable_path(misquotable) %>
      <% end %>
     </li>
  <% end %>
</ul>
