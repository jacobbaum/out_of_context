<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path, class: "form-group") do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email, autofocus: true, class: "form-control" %>

  <br>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <br>
  <%= f.submit 'Sign In', class: "sign-up btn btn-default" %>
<% end %>