<h3><%= @misquotable.title.text %></h3>


<%= form_for(@misquotable) do |f| %>
<!-- <div> -->
  <% @misquotable.title.words.each do |word| %>
    <% if word.replace? %>
      <%= f.fields_for :title do |t| %>
        <%= t.fields_for :word do |w| %>
          <%= w.text_field :replacement, value: "#{word.pos_tag.description}" %>
          <%= w.hidden_field :id %>
        <% end %>    
      <% end %>
    <% else %>
      <%= word.text %>
    <% end %> 
    <!-- <%= word.pos_tag.tag %>    -->
  <% end %>
<!-- </div> -->
<!-- <div> -->

<!-- </div> -->
