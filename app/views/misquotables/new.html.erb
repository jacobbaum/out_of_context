<!-- select topic -->
<%= form_tag({controller: "misquotables", action: "create"}, class: "bootstrappy") do %>
  <%= select_tag(:query, options_for_select(Topic.all.collect { |topic| [topic.name, topic.code] })) %>
  <%= hidden_field_tag(:query_type, 'topic') %>
  <%= submit_tag("Submit") %>
<% end %>


<!-- search -->
<%= form_tag({controller: "misquotables", action: "create"}, class: "bootstrappy") do %>
  <%= search_field_tag(:query, "Search all NPR Stories") %>
  <%= hidden_field_tag(:query_type, 'search') %>
  <%= submit_tag("Submit") %>
<% end %>


<%= form_for @misquotable do |f| %>
<%= radio_button_tag(:query_type, 'topic') %>
<%= f.collection_select(:topic_id, Topic.all, :id, :name) %>  
<%= radio_button_tag(:query_type, 'search') %>
<%= search_field_tag(:query, "Search all NPR Stories") %>
<%= f.submit 'Submit' %>
<% end %>