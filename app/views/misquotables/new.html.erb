

<div class="row"> 
  <div class="quotation">

  <%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<div class="col-sm-6">
<%= form_for @misquotable do |f| %>
<% @misquotable.topic_id = Topic.find_by_name('User Search').id %>
<%= hidden_field(:misquotable, :topic_id) %>
<%= hidden_field_tag(:query_type, 'search') %>

<%= search_field_tag(:query, "Search all of NPR", class: "form-control") %>

<%= f.submit 'Submit' %>
<% end %>
</div>

<div class="col-sm-6">
<%= form_for @misquotable do |f| %>
<%= hidden_field_tag(:query_type, 'topic') %>

<%= f.collection_select(:topic_id, Topic.all, :id, :name, { }, {class: "form-control"}) %>  

<%= f.submit 'Submit' %>
<% end %>
</div>

  </div>
</div>